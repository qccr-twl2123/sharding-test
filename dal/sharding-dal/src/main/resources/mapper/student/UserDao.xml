<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qccr.dinner.dal.student.UserDao">

    <resultMap id="resultMap" type="com.qccr.dinner.model.student.UserDO">
		<result column="id" property="id" />
		<result column="user_id" property="userId" />
		<result column="name" property="name" />
		<result column="age" property="age" />
	</resultMap>
	
	
  <sql id="columnsName">
     id,user_id,name,age
  </sql>

  <insert id="insert">
    insert into t_user (user_id,name,age) values (#{userId},#{name},#{age})
  </insert>
  
  <select id="findAll" resultMap="resultMap">
   select <include refid="columnsName"/> from t_user 
  </select>
  
  <select id="findByUserIds" resultMap="resultMap">
    select <include refid="columnsName"/> from t_user where user_id in (
     <foreach collection="list" item="item" separator=",">
        #{item}
     </foreach>
    )
  </select>
  
	
   
	
</mapper>